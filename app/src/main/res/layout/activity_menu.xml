<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:background="@drawable/nusaya"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="assalaam.project.id.bandung.Menu">

    <Button
        android:text="@string/exitBtn"
        android:textColor="#032"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exitBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="info"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageSwitcher
        android:layout_width="match_parent"
        android:background="@drawable/abi"
        android:layout_height="match_parent"
        android:layout_marginBottom="199dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:id="@+id/imageSwitcher" />

    <Button
        android:text="Tempat Wisata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#137"
        android:id="@+id/button2"
        android:layout_marginTop="157dp"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/exitBtn"
        android:layout_toStartOf="@+id/exitBtn" />

    <TextView
        android:text="Bandung Tour Guide"
        android:textSize="20dp"
        android:background="#478"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageSwitcher"
        android:layout_toEndOf="@+id/imageSwitcher" />

</RelativeLayout>
